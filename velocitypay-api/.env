# VelocityPay API - Development Environment Configuration
# ========================================================
# WARNING: These are DEVELOPMENT credentials only!
# DO NOT use these values in production!

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/velocitypay

# Blockchain RPC (local development node)
CHAIN_RPC_URL=ws://127.0.0.1:9944

# Server Configuration
SERVER_HOST=127.0.0.1
SERVER_PORT=8080

# JWT Configuration (Development Only - 32+ characters required)
# This is a development-only secret. Generate new one for production with: openssl rand -base64 32
JWT_SECRET=dev-jwt-secret-key-for-local-testing-only-min-32-chars
JWT_EXPIRATION=86400

# Admin API Key (Development Only - 32+ characters required)
# This is a development-only key. Generate new one for production with: openssl rand -base64 32
ADMIN_API_KEY=dev-admin-api-key-for-local-testing-only-min-32-chars

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# CORS Allowed Origins (Development - allows local frontend development)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173
