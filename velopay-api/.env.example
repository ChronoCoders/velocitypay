# Database Configuration
DATABASE_URL=postgresql://username:password@localhost/velopay

# Blockchain RPC
CHAIN_RPC_URL=ws://127.0.0.1:9944

# Server Configuration
SERVER_HOST=127.0.0.1
SERVER_PORT=8080

# JWT Configuration (MUST be set - minimum 32 characters)
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_EXPIRATION=86400

# Admin API Key (MUST be set - minimum 32 characters)
# Generate with: openssl rand -base64 32
ADMIN_API_KEY=your-super-secret-admin-key-change-this-in-production-min-32-chars

# Admin Seed Phrase for Blockchain Signing (MUST be set)
# For development: //Alice, //Bob, //Charlie
# For production: Use a secure seed phrase from subkey generate
ADMIN_SEED=//Alice

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# CORS Allowed Origins (comma-separated)
# For production, set to your actual frontend URLs
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://app.velopay.com
